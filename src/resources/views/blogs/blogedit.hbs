<div class="mt-4">
    <h3>Edit Blog</h3>
        <form class="mt-4" method="POST" action="/blogs/{{blog._id}}?_method=PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" value="{{blog.title}}" id="title" name="title">            
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <input type="text" class="form-control" value="{{blog.content}}" id="content" name="content">            
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" value="{{blog.description}}" id="description" name="description">            
        </div>
        <div class="form-group">
            <label for="image">IMAGE ID</label>
            <input type="text" class="form-control" value="{{blog.image}}" id="image" name="image">            
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>