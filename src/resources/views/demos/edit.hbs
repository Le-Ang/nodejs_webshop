<div class="mt-4">
    <h3>Edit</h3>
        <form class="mt-4" method="POST" action="/demos/{{demo._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{demo.name}}" id="name" name="name">            
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" value="{{demo.description}}" id="description" name="description">            
        </div>
        <div class="form-group">
            <label for="image">IMAGE ID</label>
            <input type="text" class="form-control" value="{{demo.image}}" id="image" name="image">            
        </div>
        <div class="form-group">
            <label for="image1">Other View IMAGE ID 1</label>
            <input type="text" class="form-control" value="{{demo.image1}}" id="image1" name="image1">            
        </div>
        <div class="form-group">
            <label for="image2">Other View IMAGE ID 2</label>
            <input type="text" class="form-control" value="{{demo.image2}}" id="image2" name="image2">            
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" value="{{demo.level}}" id="level" name="level">            
        </div>
        <div class="form-group">
            <label for="cost">Cost</label>
            <input type="text" class="form-control" value="{{demo.cost}}" id="cost" name="cost" placeholder="$">            
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>